<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <ListView
       android:id="@+id/listTeste"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       tools:ignore="MissingConstraints" />

   <Button
       android:id="@+id/btnListarPersona"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="76dp"
       android:layout_marginTop="128dp"
       android:layout_marginEnd="9dp"
       android:text="avaliação"
       android:onClick="listaProdutos"
       app:layout_constraintEnd_toStartOf="@+id/btnProd"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <Button
       android:id="@+id/btnProd"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="33dp"
       android:layout_marginTop="128dp"
       android:layout_marginEnd="76dp"
       android:onClick="produto"
       android:text="Lista Prod"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toEndOf="@+id/btnListarPersona"
       app:layout_constraintTop_toTopOf="parent" />

   <Button

       android:id="@+id/btnBusiness"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="64dp"
       android:layout_marginTop="16dp"
       android:onClick="business"
       android:text="Cadastrar"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/btnListarPersona" />

   <Button
       android:id="@+id/btnCadastrar"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="33dp"
       android:layout_marginTop="16dp"
       android:text="Cadastrar"
       android:onClick="cadastrar"
       app:layout_constraintStart_toEndOf="@+id/btnBusiness"
       app:layout_constraintTop_toBottomOf="@+id/btnProd" />
</androidx.constraintlayout.widget.ConstraintLayout>